<toolset>

    <pathSet base="miniconda3_gamma/bin">
        <toolPath tool="library_conversion" path="python"/>
    </pathSet>
    <pathSet base="$base">
        <pathVar name="library_conversion.script" path="library_conversion.py"/>
    </pathSet>

    <tool name="library_conversion">
        <require name="input_library" type="file"/>
        <produce name="output_converted_folder" type="folder"/>

        <execution env="binary" argConvention="adhoc">
            <arg pathRef="library_conversion.script"/>
            <arg option="input-library" valueRef="input_library"/>
            <arg option="-output-folder" valueRef="output_converted_folder"/>
        </execution>
    </tool>

</toolset>
