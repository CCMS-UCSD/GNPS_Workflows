<toolset>
    <pathSet base="anaconda3/bin">
        <toolPath tool="cscs" path="python3.5"/>
    </pathSet>
    <pathSet base="$base">
        <pathVar name="cscs.script" path="run_cscs.py" />
    </pathSet>

    <tool name="cscs">
        <require name="workflowParameters"       type="file"/>
        <produce name="output_folder"        type="folder"/>

        <execution env="binary" argConvention="adhoc">
            <arg pathRef="cscs.script"/>
                <arg valueRef="@GNPS_TASK"/>
                <arg valueRef="output_folder"/>
        </execution>
    </tool>
</toolset>
